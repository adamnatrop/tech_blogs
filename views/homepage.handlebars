<!-- Loop over each object in the post array -->

{{#each posts as |post| }}
<div class="container">
  <div class="card">
    <header>
      <div class="row">
          <h2>
            <a href="/post/{{post.id}}">{{post.title}}</a>
          </h2>
      </div>
      <div class="row">
        <p>Created by {{post.user.name}} on {{format_date post.date_created}}</p>
      </div>
    </header>
    <div class="row card-body">
      <p>
        {{post.body}}
      </p>
      </div>
      <div class="container">
        <div class="row comment">
          {{#each comments}}
            
              <div class="col-sm">
                <p>{{comment}}</p>
              </div>
            
          {{/each}}
        </div>
      </div>
      
    
  </div>
</div>
{{/each}}

